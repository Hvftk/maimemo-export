{
  "compilerOptions": {
    "target": "ES2018",
    "jsx": "react-jsx",
    "lib": ["ESNext", "DOM"],
    "baseUrl": ".",
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "paths": {
      "~/*": ["./app/*"],
      "@/*": ["./shared/*"]
    },
    "resolveJsonModule": true,
    "allowJs": false,
    "strict": true,
    "strictNullChecks": true,
    "noImplicitAny": true,
    "downlevelIteration": true,
    "importHelpers": true,
    "noEmit": true,
    "sourceMap": false,
    "allowSyntheticDefaultImports": true,
    "skipLibCheck": false
  },
  "include": ["./app/**/*.*", "./src/**/*.ts", "./shared/**/*.ts", "./*.ts"]
}
